{% include read-config.liquid %}

<!-- Start Facebook Comments -->
<div id="fb-root"></div>
<script>(function(d, s, id) {
        var js, fjs = d.getElementsByTagName(s)[0];
        if (d.getElementById(id)) return;
        js = d.createElement(s); js.id = id;
        js.src = 'https://connect.facebook.net/en_US/sdk.js#xfbml=1&version=v2.12&appId={{ config.comments.siteid }}&autoLogAppEvents=1';
        fjs.parentNode.insertBefore(js, fjs);
    }(document, 'script', 'facebook-jssdk'));</script>

<div class="fb-comments" data-href="{{ page.url | absolute_url }}" data-width="100%" data-numposts="10"></div>
<!-- End Facebook Comments -->